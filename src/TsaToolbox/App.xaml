<Application x:Class="TsaToolbox.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TsaToolbox">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ParameterValue" TargetType="TextBox">
                <Setter Property="Height" Value="18" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="Width" Value="60" />
                <Setter Property="MaxLines" Value="1" />
            </Style>
            <Style x:Key="ParameterValueShort" TargetType="TextBox">
                <Setter Property="Height" Value="18" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="Width" Value="50" />
                <Setter Property="MaxLines" Value="1" />
            </Style>
            <Style x:Key="ParameterValueWide" TargetType="TextBox">
                <Setter Property="Height" Value="18" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="Width" Value="100" />
                <Setter Property="MaxLines" Value="1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
